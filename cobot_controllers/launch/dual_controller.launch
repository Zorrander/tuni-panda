<?xml version="1.0" ?>

<launch>

  <node pkg="tf2_ros" type="static_transform_publisher" name="virtual_joint_broadcaster_1" args="0 0 0 0 0 0 world panda_link0" />

  <arg name="robot_ip" default="130.230.37.115"/>
  <arg name="load_gripper" default="true" />
  <include file="$(find franka_control)/launch/franka_control.launch" >
    <arg name="robot_ip" value="$(arg robot_ip)" />
    <arg name="load_gripper" value="$(arg load_gripper)" />
  </include>


  <include file="$(find panda_moveit_config)/launch/move_group.launch">
    <arg name="load_gripper" value="$(arg load_gripper)" />
  </include> 


  <rosparam command="load" file="$(find cobot_controllers)/config/configuration.yaml" />
  <node name="custom_controller_spawner" pkg="controller_manager" type="spawner" respawn="true" output="screen" args="joint_position_controller cartesian_impedance_controller"/>
  <node pkg="rviz" type="rviz" output="screen" name="rviz" args="-d $(find franka_example_controllers)/launch/robot.rviz"/>

  <node name="panda_arm_control" type="arm.py" pkg="cobot_controllers" output="screen" />
  <node name="panda_gripper_control" type="gripper.py" pkg="cobot_controllers" output="screen" />

</launch>
